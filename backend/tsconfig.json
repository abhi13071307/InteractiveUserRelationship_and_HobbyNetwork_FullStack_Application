{
  "compilerOptions": {
    /* File Layout */
    "rootDir": "src",
    "outDir": "dist",

    /* Environment / module settings for Node (CommonJS) */
    "module": "CommonJS",
    "target": "ES2020",

    /* Useful */
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* Emit */
    "sourceMap": true,

    /* Strictness */
    "strict": true,

    /* Keep JSX as-is for any React server-side usage (not required here) */
    "jsx": "react-jsx"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
